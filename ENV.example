# Copy this file to `.env` in any project that uses automation_core (never commit `.env`).

# General
APP_ENV=local
# Where automation_core stores shared tokens/cache across projects.
AUTOMATION_DATA_DIR=/Users/youruser/.config/automation_core

# Notion
NOTION_API_KEY=

# Google OAuth (laptop / interactive)
# Download OAuth client secrets JSON from Google Cloud Console.
GOOGLE_OAUTH_CLIENT_SECRETS=/absolute/path/to/client_secret.json
# Token cache path (auto-created)
GOOGLE_OAUTH_TOKEN_PATH=/Users/youruser/.config/automation_core/google/token.json

# Google service account (server / non-interactive)
# Put the service account JSON on the server and point here.
GOOGLE_SERVICE_ACCOUNT_JSON=/absolute/path/to/service_account.json

