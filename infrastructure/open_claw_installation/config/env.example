# OpenClaw Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

#--------------------------------------------------
# REQUIRED: Gateway Configuration
#--------------------------------------------------

# Auto-generated during installation - SAVE THIS SECURELY!
OPENCLAW_GATEWAY_TOKEN=oct_your_gateway_token_here


#--------------------------------------------------
# AI PROVIDER API KEYS (At least ONE required)
#--------------------------------------------------

# Anthropic Claude (Recommended for best results)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenAI GPT
# Get your key at: https://platform.openai.com/
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Google Gemini
# Get your key at: https://ai.google.dev/
GOOGLE_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenRouter (Multi-provider: Llama, Mistral, Gemini, etc.)
# Get your key at: https://openrouter.ai/
# Recommended for cost-effective access to multiple models
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# XAI (Grok)
# Get your key at: https://x.ai/
XAI_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx


#--------------------------------------------------
# MESSAGING PLATFORM CREDENTIALS (Optional)
#--------------------------------------------------

# Telegram Bot
# Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# WhatsApp
# Use your phone number in international format
WHATSAPP_NUMBER=+1234567890

# Discord Bot
# Create app at: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Slack Bot
# Create app at: https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-xxxxxxxxxxxxx-xxxxxxxxxxxxx-xxxxxxxxxxxxxxxxxxxxxxxx


#--------------------------------------------------
# DOCKER CONFIGURATION (Optional)
#--------------------------------------------------

# Extra system packages to install in Docker container
# Example: OPENCLAW_DOCKER_APT_PACKAGES="vim curl git"
OPENCLAW_DOCKER_APT_PACKAGES=

# Additional mount points for Docker
# Example: OPENCLAW_EXTRA_MOUNTS="/host/path:/container/path:ro"
OPENCLAW_EXTRA_MOUNTS=

# Persist /home/node in named volume (true/false)
OPENCLAW_HOME_VOLUME=false


#--------------------------------------------------
# SECURITY & SANDBOX (Optional)
#--------------------------------------------------

# Sandbox mode: "non-main" | "agent" | "disabled"
# Recommended: "non-main" for security isolation
OPENCLAW_SANDBOX_MODE=non-main

# Sandbox image to use
OPENCLAW_SANDBOX_IMAGE=openclaw-sandbox:bookworm-slim


#--------------------------------------------------
# NETWORKING (Optional)
#--------------------------------------------------

# Port for OpenClaw dashboard (default: 18789)
OPENCLAW_PORT=18789

# Host to bind to (default: 0.0.0.0 for all interfaces)
OPENCLAW_HOST=0.0.0.0


#--------------------------------------------------
# LOGGING (Optional)
#--------------------------------------------------

# Log level: debug | info | warn | error
OPENCLAW_LOG_LEVEL=info

# Enable verbose logging (true/false)
OPENCLAW_VERBOSE=false


#--------------------------------------------------
# PERFORMANCE (Optional)
#--------------------------------------------------

# Maximum memory for Docker container (e.g., "2g" for 2GB)
OPENCLAW_MEMORY_LIMIT=2g

# CPU cores to allocate (e.g., "2" for 2 cores)
OPENCLAW_CPU_LIMIT=2


#--------------------------------------------------
# ADVANCED CONFIGURATION (Optional)
#--------------------------------------------------

# Custom model configurations
# Example: Use a specific Claude model
DEFAULT_MODEL=claude-sonnet-3.5

# Temperature for AI responses (0.0 - 1.0)
# Lower = more deterministic, Higher = more creative
AI_TEMPERATURE=0.7

# Maximum tokens per response
MAX_TOKENS=4096

# Timezone for logs and scheduling
TZ=UTC


#--------------------------------------------------
# NOTES
#--------------------------------------------------
# 1. After editing this file, rename it to .env
# 2. Ensure .env is in .gitignore to prevent accidental commits
# 3. Restart Docker containers after changing values:
#    docker compose down && docker compose up -d
# 4. Verify configuration:
#    docker compose run --rm openclaw-cli doctor
